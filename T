from word2number import w2n
import os
import time
import subprocess

def cal():
        operator = subprocess.getoutput("termux-speech-to-text")
        if "addition" in operator:
                 n1 = subprocess.getoutput("termux-speech-to-text")
                 n2 = subprocess.getoutput("termux-speech-to-text")
                 a = w2n.word_to_num(n1)
                 b = w2n.word_to_num(n2)
                 print(a + b)


def add():
        n1 = subprocess.getoutput("termux-speech-to-text")
        n2 = subprocess.getoutput("termux-speech-to-text")
        a = w2n.word_to_num(n1)
        b = w2n.word_to_num(n2)
        print(a + b)

def main():
        c = subprocess.getoutput("termux-speech-to-text")
        print(str(c))
        if "calculator" in c:
                Cal()
main()
